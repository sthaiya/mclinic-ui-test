<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mclinic.view.sample"
    android:versionCode="1"
    android:versionName="@string/app_version" >
    
    <uses-permission
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="android.permission.INTERNET" />
    <uses-permission 
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-sdk android:minSdkVersion="4" />
    
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:label="@string/app_name"
            android:name=".activities.ListPatientActivity"
            android:windowSoftInputMode="stateAlwaysVisible" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activities.ListFormActivity" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.DownloadFormActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity
            android:label="@string/app_name"
            android:name=".activities.DownloadPatientActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity
            android:label="@string/app_name"
            android:name=".activities.PreferencesActivity" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.ViewPatientActivity" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.ObservationChartActivity" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.ObservationTimelineActivity" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.InstanceListActivity" />
        <activity
            android:label="@string/app_name"
            android:name=".activities.InstanceUploaderActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity 
            android:label="@string/app_name"
            android:name=".activities.CreatePatientActivity"/>
        <activity 
            android:label="@string/app_name"
             android:name=".activities.SearchPatientActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
    </application>

</manifest>